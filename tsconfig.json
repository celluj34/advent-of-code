{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES2021",
    "lib": ["ES2021"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "lib", "lib-amd"]
}
